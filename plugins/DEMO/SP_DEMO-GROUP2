SP_DEMO-GROUP2()
{
  GetVar -pattern "Fail" -name FAIL -default ""
  Task "echo first task"
  StartGroup
    Task "sleep 35"
    Task "sleep 8"
    Task "printf \${RANDOM:4}"
    Task "sleep 21"
    (( FAIL==1 )) && Task "false"
  EndGroup
  
  Task "sleep 15"
  
  StartGroup
    Task "sleep 32"
    Task "sleep 12"
    Task "hostname"
    Task "sleep 22"
  EndGroup

  StartGroup
    Task "echo STOP-CONTROL-FRAMEWORK"
    breakTask "Operations Confirmation"
    Task "echo STOP-DB-A"
    Task "echo STOP-DB-B"
  EndGroup
  StartGroup
    Task "echo INSTALL-APP-A"
    Task "echo INSTALL-APP-B"
  EndGroup
  StartGroup
    Task "echo START-DB-A"
    Task "echo START-DB-B"
    Task "echo START-APP-A"
    Task "echo START-APP-B"
  EndGroup
  StartGroup
    Task "echo START-CONTROL-FRAMEWORK"
    breakTask "echo Release Manager Notify OPS"
  EndGroup
}
